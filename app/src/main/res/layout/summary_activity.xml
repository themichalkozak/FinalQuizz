<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.themichalkozak.finalquiz.SummaryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/summary_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:text="@string/summary_text_view"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_layout_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/summary_text_view"
            android:layout_marginBottom="8dp"
            android:baselineAligned="true"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_text_view_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="end"
                    android:text="@string/name_summary_text_viw" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="end"
                    android:text="@string/number_of_points_text_view" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="end"
                    android:text="@string/sex_summary_text_view" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="end"
                    android:text="@string/hero" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/summary_text_view_Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_edit_text_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_margin="4dp"/>

                <TextView
                    android:id="@+id/quantity_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="start"
                    android:textColor="@color/colorGradding"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sex_choise_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/level_of_cooking_summary_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="start" />

            </LinearLayout>


        </LinearLayout>



        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_summary"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/description_text_view" />

        <Button
            android:id="@+id/summary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_text_view"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_triangle"
            android:onClick="returnReply"
            android:text="@string/restart_button" />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/rate_TV"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/summary_button"
            android:text="Rate this app: "/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/rate_Layout"
           android:layout_below="@+id/rate_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/rate_icon"/>
            <CheckBox
                android:id="@+id/checkbox_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/rate_icon"/>
            <CheckBox
                android:id="@+id/checkbox_3"
                android:layout_width="wrap_content"
                android:button="@drawable/rate_icon"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/checkbox_4"
                android:button="@drawable/rate_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/checkbox_5"
                android:button="@drawable/rate_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:layout_margin="20dp"
            android:id="@+id/rate_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/rate_Layout"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:hint="Enter your description to see rate"/>

        <TextView
            android:id="@+id/rate_button"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rate_editText"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_triangle"
            android:text="Rate"/>

        <TextView
            android:id="@+id/rate_description"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rate_button"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</ScrollView>